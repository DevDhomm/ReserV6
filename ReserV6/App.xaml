<Application
  x:Class="ReserV6.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  xmlns:converters="clr-namespace:ReserV6.Converters"
  DispatcherUnhandledException="OnDispatcherUnhandledException"
  Exit="OnExit"
  Startup="OnStartup"
>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ui:ThemesDictionary Theme="Light" />
        <ui:ControlsDictionary />
      </ResourceDictionary.MergedDictionaries>

      <!-- Converters -->
      <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
      <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
      <converters:ReservationStatusDynamicConverter x:Key="ReservationStatusDynamicConverter" />
      <converters:ReservationRowColorConverter x:Key="ReservationRowColorConverter" />
      <converters:ReservationCanEditConverter x:Key="ReservationCanEditConverter" />
      <converters:ReservationStatusBadgeColorConverter x:Key="ReservationStatusBadgeColorConverter" />
      <converters:AvailabilityOpacityConverter x:Key="AvailabilityOpacityConverter" />
      <converters:BoolToInvisibilityConverter x:Key="BoolToInvisibilityConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
