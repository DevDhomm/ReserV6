<Page
  x:Class="ReserV6.Views.Pages.UsersPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ReserV6.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="Utilisateurs"
  d:DataContext="{d:DesignInstance local:UsersPage,
                                     IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  ScrollViewer.CanContentScroll="False"
  mc:Ignorable="d"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Margin="16" Orientation="Vertical">
      <TextBlock FontSize="24" FontWeight="Bold" Text="Utilisateurs" />
      <TextBlock Margin="0,8,0,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Gerez les utilisateurs du systeme" />
    </StackPanel>
    <DataGrid
      Grid.Row="1"
      Margin="16"
      AutoGenerateColumns="False"
      ItemsSource="{Binding ViewModel.Users, Mode=OneWay}"
      SelectedItem="{Binding ViewModel.SelectedUser}"
    >
      <DataGrid.Columns>
        <DataGridTextColumn Binding="{Binding Nom}" Header="Nom" Width="150" />
        <DataGridTextColumn Binding="{Binding Email}" Header="Email" Width="200" />
        <DataGridTextColumn Binding="{Binding IsAdmin}" Header="Admin" Width="80" />
        <DataGridTextColumn Binding="{Binding Telephone}" Header="Telephone" Width="120" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Page>
